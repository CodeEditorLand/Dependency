{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"files": {
		"ignore": [
			"**/Target/**/*",
			"**/Documentation/**/*",
			"**/dist/**/*",
			"**/*.astro"
		],
		"maxSize": 10000000
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"jsxQuoteStyle": "double",
			"lineEnding": "lf",
			"lineWidth": 80,
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "all"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineEnding": "lf",
			"lineWidth": 80
		},
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"all": true
			},
			"all": true,
			"complexity": {
				"all": true,
				"noExcessiveCognitiveComplexity": "off",
				"noForEach": "off",
				"useLiteralKeys": "off",
				"noUselessLoneBlockStatements": "off"
			},
			"correctness": {
				"all": true,
				"noUnusedVariables": "off"
			},
			"nursery": {
				"all": true,
				"noNodejsModules": "off",
				"useImportRestrictions": "off",
				"noUndeclaredDependencies": "off",
				"noConsole": "off",
				"useSortedClasses": "off"
			},
			"performance": {
				"all": true
			},
			"security": {
				"all": true
			},
			"style": {
				"all": true,
				"noDefaultExport": "off",
				"noUselessElse": "off",
				"useNamingConvention": "off",
				"useShorthandFunctionType": "off",
				"useFilenamingConvention": "off",
				"useNodejsImportProtocol": "off"
			},
			"suspicious": {
				"all": true,
				"noConsoleLog": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
